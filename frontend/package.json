{
  "name": "kf-frontend",
  "version": "1.0.0",
  "description": "Angular 20 frontend with NgRx",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:docker": "ng serve --configuration docker",
    "build": "ng build",
    "build:docker": "ng build --configuration docker",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false --browsers=ChromeHeadless",
    "test:watch": "ng test",
    "test:coverage": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage --reporters=coverage-istanbul",
    "e2e": "cypress open",
    "e2e:headless": "cypress run",
    "e2e:ci": "cypress run --browser chrome --headless",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "type-check": "ng build --configuration development --dry-run"
  },
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@ngrx/store": "^20.0.0",
    "@ngrx/effects": "^20.0.0",
    "@ngrx/store-devtools": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.0",
    "@angular/cli": "^20.3.0",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.7.0",
    "cypress": "^13.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.0"
  }
}
